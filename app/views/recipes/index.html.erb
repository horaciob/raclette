<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-10">
    <h1 class="text-4xl font-bold text-blue-800">Recipes</h1>
    <%= link_to 'New recipe', new_recipe_path, class: "rounded-lg py-3 px-5 bg-blue-300 text-white block font-medium" %>
  </div>

  <div id="recipes" class="min-w-full">
    <%= form_tag(recipes_path, method: :get, id: "filter-form") do %>
      <%= label_tag 'filters[ingredients][]', "Ingredients", class: "text-gray-600" %>
      <%= text_field_tag 'filters[ingredients][]', nil, placeholder: "Ingredient 1", class: "border border-gray-300 rounded-md px-4 py-2 mt-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <%= text_field_tag 'filters[ingredients][]', nil, placeholder: "Ingredient 2", class: "border border-gray-300 rounded-md px-4 py-2 mt-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <%= text_field_tag 'filters[ingredients][]', nil, placeholder: "Ingredient 3", class: "border border-gray-300 rounded-md px-4 py-2 mt-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <%= text_field_tag 'filters[ingredients][]', nil, placeholder: "Ingredient 4", class: "border border-gray-300 rounded-md px-4 py-2 mt-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <%= text_field_tag 'filters[ingredients][]', nil, placeholder: "Ingredient 5", class: "border border-gray-300 rounded-md px-4 py-2 mt-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <%= submit_tag "Filter", class: "bg-blue-500 text-white font-semibold px-4 py-2 mt-4 mb-5 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    <% end %>

    <%= render @recipes %>
    <div class="mx-auto text-center my-4">
    <%= paginate @recipes %>
    </div>
  </div>
</div>


